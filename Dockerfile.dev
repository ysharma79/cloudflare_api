FROM node:20-alpine

WORKDIR /app

# Copy package.json and package-lock.json
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy the rest of the application
COPY . .

# Expose the port that Miniflare will run on
EXPOSE 8787

# Start Miniflare for local development
CMD ["npm", "run", "dev"]
