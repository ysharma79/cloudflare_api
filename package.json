{
  "name": "cloudflare-d1-api",
  "version": "1.0.0",
  "description": "Cloudflare Workers API with D1 database integration",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "docker:build": "docker build -t cloudflare-d1-api-production .",
    "docker:deploy": "docker run --rm -it cloudflare-d1-api-production npm run deploy:production",
    "deploy:script": "./deploy.sh",
    "deploy:wrangler": "./deploy-wrangler.sh"
  },
  "dependencies": {
    "itty-router": "^4.0.23"
  },
  "devDependencies": {
    "wrangler": "^4.26.1"
  }
}
